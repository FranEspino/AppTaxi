<resources>
    <!-- name of theme application and NoActionBar because we will job all characteristics  -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 500 color primary 700 primary dark -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Rised Button -->
    <style name="RaisedButtom" parent="Theme.AppCompat.Light">

        <!-- First -->
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <!-- Second -->
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <!-- Third -->
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <!-- Change Color appearance in the hint -->
    <style name="EditTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/editText_hint_login</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>

    </style>

    <style name="EditTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/editText_hint_login</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>
